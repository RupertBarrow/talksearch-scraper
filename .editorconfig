root = true

[*.{cls,js}]
max_line_length = 250

[*]
end_of_line = lf
insert_final_newline = true
detectIndentation = false
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
charset = utf-8 

[*.{yml}]
indent_size = 2

[*.{html}]
html.format.wrapLineLength = 250
html.format.wrapAttributes = "preserve-aligned"
